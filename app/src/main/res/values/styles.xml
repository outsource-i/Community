<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/gray_3</item>
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/toolbar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="capitaldialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="chatTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@drawable/login_cursor_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!--所有Activity动画-支持动画-->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <style name="ActionImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_colored_material</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:tint">@color/tintColor</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/gray_c</item>
        <item name="android:background">@color/black</item>
    </style>
    <style name="full">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.regist" parent="AppTheme">
        <item name="android:textColorHint">@color/gray_6</item>
        <item name="android:progressBackgroundTint">@color/toolbar_color</item>
        <item name="colorControlNormal">@color/gray_c</item>
        <item name="colorControlActivated">@color/toolbar_color</item>
        <item name="colorControlHighlight">@color/gray_3</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:colorButtonNormal">@color/white</item>
    </style>

    <style name="AppTheme.pserondialog" >
        <item name="android:windowBackground">@color/nobg</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="AppTheme.splash" parent="AppTheme.regist">
        <item name="android:windowBackground">@color/toolbar_color</item>
    </style>
    <style name="AppTheme.home" parent="AppTheme.regist">
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="AppTheme.person" parent="AppTheme.regist">
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="login_edit" parent="Theme.AppCompat.Light">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:paddingBottom">@dimen/x15</item>
        <item name="android:drawablePadding">@dimen/x15</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/x300</item>
        <item name="android:layout_height">@dimen/x50</item>
        <item name="colorControlNormal">@color/gray_dcdcdc</item>
        <item name="colorControlActivated">@color/main_color</item>
    </style>

    <style name="phone_edit">
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:drawablePadding">@dimen/x15</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/login_edit_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--textview基类-->
    <style name="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- pact签约页面 textview-->
    <style name="tv_parent.pact_tv">
        <item name="android:textColor">@color/gray_6</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:layout_marginTop">@dimen/y15</item>
        <item name="android:layout_marginLeft">@dimen/x35</item>
    </style>

    <style name="appcompatbtn" parent="tv_parent">
        <item name="android:layout_height">@dimen/x45</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_ripple_blue</item>
        <item name="android:textSize">@dimen/s18</item>
    </style>
    <style name="tv_login" parent="tv_parent">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:textSize">@dimen/s14</item>
    </style>

    <style name="person_rb">
        <item name="android:textColor">@drawable/person_tab_text</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/s14</item>
    </style>
    <style name="person_edt">
        <item name="android:maxLength">20</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/person_edit_bcg</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textColorHint">@color/rightColor</item>
        <item name="android:layout_width">@dimen/x300</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:paddingRight">@dimen/x15</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="person_tv">
        <item name="android:clickable">true</item>
        <item name="android:paddingRight">@dimen/x10</item>
        <item name="android:drawableRight">@mipmap/borrowing_icon_arrows</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x15</item>
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textColorHint">@color/rightColor</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
        <item name="android:background">@drawable/person_tv_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="main_rb">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:drawablePadding">5dp</item>-->
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 身份证页面的textview-->
    <style name="tv_idcard" parent="tv_parent">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/s14</item>
        <item name="android:layout_width">@dimen/x300</item>
        <item name="android:layout_marginTop">@dimen/y10</item>
    </style>
