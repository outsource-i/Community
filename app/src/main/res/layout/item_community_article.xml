<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/item_community_article_head"
                        android:src="@mipmap/head_img"
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"/>
            <TextView
                    android:id="@+id/item_community_article_name"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="这是用户名字"
                    android:textSize="@dimen/s12"
                    android:textColor="@color/gray_3"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:visibility="gone"
                    android:textColor="@color/red_money"
                    android:layout_marginLeft="@dimen/x5"
                    android:padding="@dimen/x3"
                    android:background="@drawable/activity_bg"
                    android:id="@+id/item_community_article_type"
                    android:text="活动"
                    android:textSize="@dimen/s12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:visibility="gone"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    android:src="@mipmap/xiala"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
     <TextView
             android:text="这是标题"
            android:maxLines="1"
             android:textSize="@dimen/s14"
            android:ellipsize="end"
             android:textColor="@color/gray_3"
            android:layout_marginTop="@dimen/x10"
            android:id="@+id/item_community_article_title"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
                android:id="@+id/item_community_article_img"
                android:layout_margin="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/item_community_article_info"
                android:textColor="@color/gray_9"
                android:textSize="@dimen/s12"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/s10"
                android:textColor="@color/gray_9"
                android:text="29分钟前"
                android:id="@+id/item_community_article_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="@dimen/s10"
                android:textColor="@color/gray_9"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x10"
                android:text="0阅读 0评论"
                android:id="@+id/item_community_article_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>