<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="@dimen/x5"
                android:layout_marginBottom="@dimen/x10"
                android:background="@color/white"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_toLeftOf="@+id/item_article_img"
            android:maxLines="2"
            android:textSize="@dimen/s16"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/gray_3"
            android:layout_marginRight="@dimen/x15"
            android:id="@+id/item_article_title"
            android:text="今日新闻"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_toLeftOf="@+id/item_article_img"
            android:layout_below="@+id/item_article_title"
            android:maxLines="1"
            android:textSize="@dimen/s12"
            android:ellipsize="end"
            android:textColor="@color/gray_9"
            android:id="@+id/item_article_content"
            android:text="今日新闻"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    <ImageView
            android:scaleType="centerInside"
            android:id="@+id/item_article_img"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"/>
    <LinearLayout
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:layout_below="@+id/item_article_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/s12"
                android:textColor="@color/gray_9"
                android:id="@+id/item_article_name"
                android:text="jerry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:textSize="@dimen/s12"
                android:textColor="@color/gray_9"
                android:id="@+id/item_article_community"
                android:layout_toRightOf="@+id/item_article_name"
                android:text="社区"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginRight="@dimen/x10"
                android:gravity="center"
                android:id="@+id/item_article_click"
                android:drawablePadding="@dimen/x3"
                android:drawableLeft="@mipmap/look"
                android:textSize="@dimen/x10"
                android:text="2345"
                android:layout_below="@+id/item_article_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginRight="@dimen/x10"
                android:id="@+id/item_article_comment"
                android:drawablePadding="@dimen/x3"
                android:drawableLeft="@mipmap/comment"
                android:text="2345"
                android:gravity="center"
                android:textSize="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>